{
    "name": "git-whoami",
    "displayName": "git-whoami",
    "description": "display gitconfig info",
    "author": {
        "email": "alberto.ielpo@gmail.com",
        "name": "Alberto Ielpo",
        "url": "https://ielpo.net"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.87.0"
    },
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "repository": {
        "url": "https://github.com/albertoielpo/git-whoami.git"
    },
    "contributes": {
        "commands": [
            {
                "command": "git-whoami.show-current-author",
                "title": "Show current author details"
            },
            {
                "command": "git-whoami.change-author",
                "title": "Change author"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/parse-git-config": "^3.0.4",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "@vscode/test-cli": "^0.0.8",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "parse-git-config": "^3.0.0",
        "simple-git": "^3.24.0"
    }
}
