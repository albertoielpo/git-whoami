{
    "name": "git-whoami",
    "displayName": "Git Whoami",
    "description": "Display git whoami info",
    "publisher": "albertoielpo",
    "author": {
        "email": "alberto.ielpo@gmail.com",
        "name": "Alberto Ielpo",
        "url": "https://ielpo.net"
    },
    "version": "1.1.0",
    "engines": {
        "vscode": "^1.87.0"
    },
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "repository": {
        "url": "https://github.com/albertoielpo/git-whoami.git"
    },
    "icon": "images/logo.png",
    "contributes": {
        "commands": [
            {
                "command": "git-whoami.change-author",
                "title": "Git Whoami: Change author"
            },
            {
                "command": "git-whoami.clean-authors",
                "title": "Git Whoami: Clean authors except current"
            }
        ],
        "configuration": {
            "title": "Git Whoami",
            "properties": {
                "git-whoami.statusbar.display": {
                    "type": "string",
                    "enum": [
                        "full",
                        "email",
                        "name",
                        "domain"
                    ],
                    "default": "full",
                    "description": "status bar display mode"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "@vscode/test-cli": "^0.0.8",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "simple-git": "^3.24.0"
    }
}
